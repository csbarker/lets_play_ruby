    <body>
        <div class="container_12">
            <div class="grid_12">
                <form action="/login" method="POST">
                    <h3>Username</h3>
                    <input type="text" name="user[name]" id="username" class="topcoat-text-input--large" value="">
                    <h3>Password</h3>
                    <input type="text" name="user[password]" id="password" class="topcoat-text-input--large" value="">
                    <p>
                        <button class="topcoat-button--large--cta">Login</button>
                    </p>
                </form>
            </div>
        </div>
    </body>
